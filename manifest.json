{
  "manifest_version": 2,
  "name": "Select Tabs",
  "description": "Select multiple tabs: tabs of the same website, tabs to the left or right, parent/sibling/descendant tabs, and more.",
  "version": "2.0.0",
  "icons": {
    "48": "selecttabs.svg",
    "96": "selecttabs.svg"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ],
  "background": {
    "page": "background/background.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "selecttabs@lionelw"
    }
  }
}
